{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Authentication": {
    "Enabled": true
  },
  "AzureAd": {
    "Authority": "https://login.microsoftonline.com/<YOUR_TENANT_ID>",
    "ClientId": "<YOUR_API_CLIENT_ID>",
    "Audience": "api://<YOUR_API_CLIENT_ID>"
  },
  "IdentityServer": {
    "Authority": "http://identityserver:5000"
  },
  "Cors": {
    "AllowedOrigins": [
      "https://<YOUR_PRODUCTION_DOMAIN>"
    ]
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=db,1433;Database=TimeClockDB;User Id=sa;Password=YourStrong@Passw0rd;TrustServerCertificate=true"
  }
}
