{
  "Authentication": {
    "Enabled": true
  },
  "TimeClientBaseUrl": "http://localhost:5000",
  "AuthProvider": "AzureAd",
  "AzureAd": {
    "Authority": "https://login.microsoftonline.com/<YOUR_TENANT_ID>",
    "ClientId": "<YOUR_BLAZOR_CLIENT_ID>",
    "ValidateAuthority": true
  },
  "Oidc": {
    "Authority": "http://localhost:5002",
    "ClientId": "timeclock-blazor-local",
    "ResponseType": "code",
    "DefaultScopes": [
      "openid",
      "profile",
      "api://timeclock-api-local/access_as_user"
    ]
  },
  "Api": {
    "Scopes": [ "api://<YOUR_API_CLIENT_ID>/access_as_user" ]
  }
}